{
  "name": "typescript-project-template",
  "version": "1.0.0",
  "description": "A simple template to easily start typescript project",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "ts-node dist/server.js",
    "docker": "prisma migrate deploy && npm run generate && npm run build && npm start",
    "dev": "ts-node-dev src/server.ts",
    "dev:db": "docker run -it --rm --name ${DB_NAME} -e POSTGRES_PASSWORD=${DB_PASS} -e POSTGRES_USER=${DB_USER} -e POSTGRES_DB=${DB_NAME} -p ${DB_PORT}:${DB_PORT} -d postgres:alpine",
    "migration": "prisma migrate dev",
    "generate": "prisma generate",
    "clean": "rm -rf dist/ coverage/",
    "lint": "eslint src/**",
    "lint:fix": "eslint --fix src/**",
    "test": "jest --coverage tests",
    "test:watch": "jest --coverage tests --watchAll"
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "author": "Quentin Veyrenc",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@typescript-eslint/typescript-estree": "^4.9.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "prisma": "^2.20.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@jest/globals": "^26.6.2",
    "@prisma/client": "^2.20.1",
    "@types/http-status-codes": "^1.2.0",
    "cors": "^2.8.5",
    "env-var": "^7.0.0",
    "eslint": "^7.14.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "http-status-codes": "^2.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0"
  }
}
