// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id          String          @id
    accessToken String
    weatherUsed Boolean         @default(false)
    githubUsed  Boolean         @default(false)
    spacexUsed  Boolean         @default(false)
    weather     WeatherWidget[]
    github      GithubWidget[]
    spacex      SpaceXWidget[]
}

model WeatherWidget {
    id      String      @id @default(uuid())
    param   String      @default("")
    timer   Int
    weather Boolean // If false, then it's a temperature widget
    user    User        @relation(fields: [userId], references: [id])
    userId  String
}

model GithubWidget {
    id      String      @id @default(uuid())
    repo    String      @default("")
    timer   Int
    user    User        @relation(fields: [userId], references: [id])
    userId  String
}

model SpaceXWidget {
    id String @id @default(uuid())
    rocketId String?
    desiredInfo String?
    timer Int
    user    User        @relation(fields: [userId], references: [id])
    userId  String
}