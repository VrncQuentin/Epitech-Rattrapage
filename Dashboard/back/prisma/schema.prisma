// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id      String      @id
    accessToken string
    weatherUsed bool    @default(false)
    weather WeatherWidgets[]
    githubUsed bool    @default(false)
    github  Github[]
}

model WeatherWidget {
    id      String      @id @default(uuid())
    param   String      @default("")
    timer   int         @required
    weather bool        @required // If false widget is temperature, if true it's weather
    user    User        @relation(fields: [userId], references: [id])
    userId  String
}

model Github {
    id      String      @id @default(uuid())
    repo    String      @default("")
    timer   int         @required
    user    User        @relation(fields: [userId], references: [id])
    userId  String
}